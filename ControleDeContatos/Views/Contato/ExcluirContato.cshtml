@model ContatoModel;
@{
    ViewData["Title"] = "Excluir contato";
}
<div class="text-center">
    <h1 class="display-4">Deseja excluir o contato?</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Telefone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Nome</td>
                <td>@Model.Email</td>
                <td>@Model.Telefone</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-danger" asp-controller="Contato" asp-route-id ="@Model.Id" asp-action="Deletar">Sim</a>
                        <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Index">Cancelar</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>